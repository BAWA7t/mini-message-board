<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
</head>
<body>
  <h1>Add a New Message</h1>

  <% if (errors && errors.length) { %>
    <ul>
      <% errors.forEach(e => { %>
        <li style="color:red;"><%= e.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/new" method="POST">
    <input
      type="text"
      name="messageUser"
      placeholder="Your name"
      value="<%= formData?.messageUser || '' %>"
      required
    >
    <br><br>

    <textarea
      name="messageText"
      placeholder="Your message"
      required
    ><%= formData?.messageText || '' %></textarea>
    <br><br>

    <button type="submit">Send</button>
  </form>

  <a href="/">Go Back</a>
</body>
</html>
